<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:backgroundTint="@color/white"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="4dp">

    <LinearLayout
        android:id="@+id/ly1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="@color/dark_white"
        android:padding="16dp"
        android:orientation="vertical"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceParticularButton"
        android:background="@drawable/bg_border">

        <TextView
            android:id="@+id/tv_question_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:fontFamily="@font/quicksand_bold"
            android:text="@string/question"
            android:textColor="@color/primary"
            android:textSize="20sp"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/tv_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="0dp"
            android:fontFamily="@font/roboto_regular"
            android:text="@string/loremn_ipsum"
            android:textColor="@color/primary"
            android:textSize="14sp"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/tv_answer_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:fontFamily="@font/quicksand_bold"
            android:text="@string/answer"
            android:textColor="@color/primary"
            android:textSize="20sp"
            android:visibility="visible"
            android:layout_marginTop="24dp"/>

        <TextView
            android:id="@+id/tv_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="0dp"
            android:fontFamily="@font/roboto_regular"
            android:text="@string/loremn_ipsum"
            android:textColor="@color/primary"
            android:textSize="14sp"
            android:visibility="visible"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp">

            <TextView
                android:id="@+id/tv_grade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="3dp"
                android:fontFamily="@font/quicksand_bold"
                android:text="@string/grade"
                android:textSize="25sp"
                android:textColor="@color/primary"/>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginStart="24dp"
                android:paddingStart="24dp"
                android:paddingBottom="3dp"
                android:paddingTop="3dp">

                <com.example.autograde.TextViewCustom
                    android:id="@+id/tv_grade1"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:textSize="16sp"
                    android:text="1"
                    android:layout_weight="0.20"
                    android:gravity="center"
                    android:fontFamily="@font/quicksand_bold"
                    tools:background="@drawable/bg_nav_number_inactive"
                    tools:textColor="@color/primary"/>


                <com.example.autograde.TextViewCustom
                    android:id="@+id/tv_grade2"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:textSize="16sp"
                    android:layout_weight="0.20"
                    android:layout_marginStart="15dp"
                    android:text="2"
                    android:gravity="center"
                    android:fontFamily="@font/quicksand_bold"
                    tools:background="@drawable/bg_nav_number_inactive"
                    tools:textColor="@color/primary"/>

                <com.example.autograde.TextViewCustom
                    android:id="@+id/tv_grade3"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:textSize="16sp"
                    android:layout_weight="0.20"
                    android:layout_marginStart="15dp"
                    android:text="3"
                    android:gravity="center"
                    android:fontFamily="@font/quicksand_bold"
                    tools:background="@drawable/bg_nav_number_inactive"
                    tools:textColor="@color/primary"/>

                <com.example.autograde.TextViewCustom
                    android:id="@+id/tv_grade4"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:textSize="16sp"
                    android:layout_weight="0.20"
                    android:layout_marginStart="15dp"
                    android:text="4"
                    android:gravity="center"
                    android:fontFamily="@font/quicksand_bold"
                    tools:background="@drawable/bg_nav_number_inactive"
                    tools:textColor="@color/primary"/>

                <com.example.autograde.TextViewCustom
                    android:id="@+id/tv_grade5"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:textSize="16sp"
                    android:layout_weight="0.20"
                    android:layout_marginStart="15dp"
                    android:text="5"
                    android:gravity="center"
                    android:fontFamily="@font/quicksand_bold"
                    tools:background="@drawable/bg_nav_number_inactive"
                    tools:textColor="@color/primary"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>